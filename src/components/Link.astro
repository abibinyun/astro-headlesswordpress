---
import { Icon } from "astro-icon";
interface Props {
  text?: string;
  href?: string;
  style?: "primary" | "secondary";
  icon?: {
    name: string;
    side: "left" | "right";
  };
  isFilled?: boolean;
  borderVisible?: boolean;
  classes?: string;
}

const {
  text = "link",
  href,
  style,
  classes,
  icon,
  isFilled = true,
  borderVisible = false,
  ...rest
} = Astro.props as Props;
---

<a
  href={href}
  class:list={[
    "link",
    classes,
    style,
    { filled: isFilled, borderd: borderVisible },
  ]}
  {...rest}
>
  {icon && icon.side === "left" && <Icon name={icon.name} height="24" />}
  <span class="badge badge-primary m-[1px] pb-2 pt-1.5">{text}</span>
  {icon && icon.side === "right" && <Icon name={icon.name} height="24" />}
</a>
